<div class="container col-md-6 text-center mt-3">
    <h4 class="alert alert-primary">User Login</h4>
    <form class="card p-3 bg-light" action="LoginCheck" method="post">
        <div class="form-group">
            <h5 class="text text-danger">Username</h5>
            <input class="form-control" type="text" name="UserName"/> 
        </div>
        <div class="form-group">
            <h5 class="text text-danger">Password</h5>
            <input class="form-control" type="password" name="Password"/> 
        </div>
        <input class="btn btn-success" type="submit" value="Login" />
    </form>
</div>