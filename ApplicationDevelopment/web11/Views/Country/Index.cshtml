@model ICollection<Country>

<div class="container text-center mt-3">
    <table class="table table-bordered">
        <tr>
            <th colspan="3" class="text text-success h2">Country List</th>
            <th>
                <a class="btn btn-primary"
                   asp-controller="Country" asp-action="Add">Add</a>
            </th>
        </tr>
        <tr>
            <th>Country Id</th>
            <th>Country Name</th>
            <th>Capital Name</th>
            <th>Menu</th>
        </tr>
        @foreach (var country in Model)
        {
            <tr>
                <td>@country.Id</td>
                <td>@country.Name</td>
                <td>@country.Capital.Name</td>
                <td>
                    <a class="btn btn-warning" asp-controller="Country"
                   asp-action="Edit" asp-route-id="@country.Id">
                        Edit
                    </a>
                    <a class="btn btn-danger" asp-controller="Country"
                   asp-action="Delete" asp-route-id="@country.Id"
                    onclick="    return confirm('Do you want to delete this country ?');"
                    >
                        Delete
                    </a>
                </td>
            </tr>
        }
    </table>
</div>    