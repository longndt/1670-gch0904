@model ICollection<Capital>

<div class="container text-center mt-3">
    @*   nhận và hiển thị dữ liệu của TempData gửi từ Controller  *@
    @if (@TempData["Info"] != null)
   {
     <p class="alert alert-danger mt-3 mb-3">@TempData["Info"]</p>
   }
    <table class="table table-bordered">
        <tr>
            <th colspan="3" class="text text-success h2">Capital List</th>
            <th>
                <a class="btn btn-primary"
                   asp-controller="Capital" asp-action="Add">Add</a>
            </th>
        </tr>
        <tr>
            <th>Capital Id</th>
            <th>Capital Name</th>
            <th>Country Name</th>
            <th>Menu</th>
        </tr>
        @foreach (var capital in Model)
        {
            <tr>
                <td>@capital.Id</td>
                <td>
                    <a asp-controller="Capital" asp-action="Detail" asp-route-id="@capital.Id">
                        @capital.Name
                    </a>
                </td>
                <td>@capital.Country.Name</td>
                <td>
                    <a class="btn btn-warning" asp-controller="Capital"
                   asp-action="Edit" asp-route-id="@capital.Id">
                        Edit
                    </a>
                    <a class="btn btn-danger" asp-controller="Capital"
                   asp-action="Delete" asp-route-id="@capital.Id"
                    onclick="    return confirm('Do you want to delete this capital ?');"
                    >
                        Delete
                    </a>
                </td>
            </tr>
        }
    </table>
</div>    