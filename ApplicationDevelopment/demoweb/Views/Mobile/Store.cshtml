@model ICollection<Mobile>

<div class="container text-center mt-3">
    <div class="card-group">
        <div class="row">
            @foreach (var mobile in Model)
            {
                <div class="col-md-4 p-3">
                    <div class="card">
                        <img class="card-img-top" src="@mobile.Image" width="100" height="150">
                        <div class="card-body">
                            <h5 class="card-title">@mobile.Name</h5>
                            <p class="card-text">@mobile.Price $</p>
                        </div>
                        @if (mobile.Quantity == 0)
                        {
                            <div class="card-subtitle">
                                <p class="text-danger">Out of stock</p>
                            </div>
                        }
                        else
                        {
                            <div class="card-subtitle">
                                <p class="card-text">@mobile.Quantity</p>
                            </div>
                            <div class="card-body">
                                <form asp-controller="Order" asp-action="Detail">
                                    <input type="hidden" name="id" value="@mobile.Id" />
                                    <input class="form-control" type="number" name="quantity" min="1" max="@mobile.Quantity">
                                    <div class="form-group">
                                        <input type="submit" class="btn btn-success" value="Add to cart" />
                                    </div>
                                </form>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>
