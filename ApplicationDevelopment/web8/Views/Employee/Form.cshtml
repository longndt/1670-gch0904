<!-- Cách 2: Khai báo ngắn gọn chỉ chứa tên của Action nếu cùng 1 controller-->
<div class="container col-md-6 text-center mt-3">
<form class="card p-3 bg-light" action="Output" method="post">
    <h3 class="alert alert-danger">Add new employee</h3>
    <div class="form-group">
        <label class="text text-success">Name</label>
        <input class="form-control" type="text" required maxlength="10" name="Name"/>
    </div>
    <div class="form-group">
        <label class="text text-success">Age</label>
        <input class="form-control" type="number" required min="18" max="50" name="Age"/>
    </div>
      <div class="form-group">
        <label class="text text-success">Email</label>
        <input class="form-control" type="email" required maxlength="30" name="Email"/>
    </div>
      <div class="form-group">
        <label class="text text-success">Address</label>
        <textarea class="form-control" name="Address"> </textarea>
    </div>
    <div class="form-group">
        <label class="text text-success">Gender</label><br />
        Male <input type="radio" name="Gender" value="Male" />
        Female <input type="radio" name="Gender" value="Female" />
    </div>
     <div class="form-group">
        <label class="text text-success">Department</label>
        <select class="form-control" name="Department">
            <option value="Kinh doanh">Kinh doanh</option>
            <option value="Hành chính">Hành chính</option>
            <option value="Nhân sự">Nhân sự</option>
            <option value="Kế toán">Kế toán</option>
        </select> 
    </div>
    <div class="form-group">
        <label class="text text-success">Strength</label><br />
        Chăm chỉ <input type="checkbox" value="Chăm chỉ" name="Strength"/>
         Nhanh nhẹn <input type="checkbox" value="Nhanh nhẹn" name="Strength"/>
          Hòa đồng <input type="checkbox" value="Hòa đồng" name="Strength"/>
           Ham học hỏi <input type="checkbox" value="Ham học hỏi" name="Strength"/>
    </div>
    <div class="form-group">
        <label class="text text-success">Salary</label>
        <input class="form-control" type="number" name="Salary"/>
    </div>
    <input class="btn btn-primary" type="submit" value="Add" />
</form>
</div>