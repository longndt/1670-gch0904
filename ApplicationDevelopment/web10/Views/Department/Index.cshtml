@model ICollection<Department>

<div class="container col-md-8 text-center mt-3">
<table class="table table-primary">
    <tr>
        <th colspan="3" class="text text-success h2">Department List</th>
        <th>
            <a class="btn btn-info" asp-controller="Department" asp-action="Add">
                Add
            </a>
        </th>
    </tr>
    <tr class="bg-info">
        <th>Department Id</th>
        <th>Department Name</th>
        <th>Department Image</th>
        <th>Menu</th>
    </tr>
    @foreach (var department in Model)
    {
        <tr>
            <td>@department.Id</td>
            <td>@department.Name</td>
            <td>
                <a asp-controller="Department" asp-action="Detail" asp-route-id="@department.Id">
                        <img class="img-thumbnail" src="@department.Image" width="100" height="100">
                </a>   
            </td>
            <td> 
                <a class="btn btn-warning" asp-controller="Department" asp-action="Edit" asp-route-id="@department.Id">
                    Edit
                </a>
                 <a  class="btn btn-danger"asp-controller="Department" asp-action="Delete" asp-route-id="@department.Id"
                 onclick="    return confirm('Do you want to delete this department ?');">
                    Delete
                </a>
            </td>
        </tr>
    }
</table>
</div>