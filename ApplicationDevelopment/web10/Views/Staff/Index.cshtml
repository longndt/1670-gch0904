<!-- nhận dữ liệu gửi từ Controller thông qua model -->
@model ICollection<Staff>

<div class="container col-md-8 text-center mt-3">
<table class="table table-primary">
    <tr>
        <th colspan="3" class="text text-success h2">Staff List</th>
        <th>
            <a class="btn btn-info" asp-controller="Staff" asp-action="Add">
                Add
            </a>
        </th>
    </tr>
    <tr class="bg-info">
        <th>Staff Id</th>
        <th>Staff Name</th>
        <th>Department Name</th>
        <th>Staff Image</th>
        <th>Menu</th>
    </tr>
    @foreach (var staff in Model)
    {
        <tr>
            <td>@staff.Id</td>
            <td>@staff.Name</td>
            <td>@staff.Department.Name</td>
            <td>
                <a asp-controller="Staff" asp-action="Detail" asp-route-id="@staff.Id">
                        <img class="img-thumbnail" src="@staff.Image" width="100" height="100">
                </a>   
            </td>
            <td> 
                <a class="btn btn-warning" asp-controller="Staff" asp-action="Edit" asp-route-id="@staff.Id">
                    Edit
                </a>
                 <a  class="btn btn-danger"asp-controller="Staff" asp-action="Delete" asp-route-id="@staff.Id"
                 onclick="    return confirm('Do you want to delete this staff ?');">
                    Delete
                </a>
            </td>
        </tr>
    }
</table>
</div>