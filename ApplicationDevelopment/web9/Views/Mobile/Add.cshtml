@model web9.Models.Mobile

<div class="container col-md-8 text-center mt-5">
    <form class="card p-3 bg-light" asp-controller="Mobile" asp-action="Add" method="post">
        <h1 class="alert alert-success">Add new mobile</h1>
        <div class="form-group">
            <h4 class="text text-info">Mobile Name</h4>
            <input class="form-control" type="text" name="Name" />
            <span class="text text-danger font-italic" asp-validation-for="Name"></span>
        </div>
         <div class="form-group">
            <label class="text-info h4" asp-for="Brand"></label>
            <select class="form-control" asp-for="Brand">
                <option>Select mobile brand</option>
                <option value="Apple">Apple</option>
                <option value="Samsung">Samsung</option>
                <option value="Xiaomi">Xiaomi</option>
                <option value="Other">Other</option>
             </select>
             <span class="text text-danger font-italic" asp-validation-for="Brand"></span>
        </div>
        <div class="form-group">
            <label class="text-info h4" asp-for="Color"></label>
            <select class="form-control" asp-for="Color">
                <option>Select mobile color</option>
                <option value="Black">Black</option>
                <option value="Blue">Blue</option>
                <option value="Yellow">Yellow</option>
                <option value="White">White</option>
            </select>
            <span class="text text-danger font-italic" asp-validation-for="Color"></span>
        </div>
        <div class="form-group">
            <label class="text-info h4" asp-for="Price"></label>
            <input class="form-control" asp-for="Price" />
             <span class="text text-danger font-italic" asp-validation-for="Price"></span>
        </div>
         <div class="form-group">
            <label class="text-info h4" asp-for="Image"></label>
            <input class="form-control" asp-for="Image" />
            <span class="text text-danger font-italic" asp-validation-for="Image"></span>
        </div>
        <div class="form-group">
            <label class="text-info h4" asp-for="Quantity"></label>
            <input class="form-control" asp-for="Quantity" />
             <span class="text text-danger font-italic" asp-validation-for="Quantity"></span>
        </div>
        <div class="form-group">
            <label class="text-info h4" asp-for="Date"></label>
            <input class="form-control" asp-for="Date" />
             <span class="text text-danger font-italic" asp-validation-for="Date"></span>
        </div>
        <div class="form-group">
            <label class="text-info h4" asp-for="BestSeller"></label>
            <input class="form-control" asp-for="BestSeller" />
            <span class="text text-danger font-italic" asp-validation-for="BestSeller"></span>
        </div>
        <div class="form-group">
            <input class="btn btn-primary" type="submit" value="Add" />
        </div>
    </form>
</div>